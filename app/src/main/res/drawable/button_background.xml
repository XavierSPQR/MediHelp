<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Set the desired background color when pressed -->
            <corners android:radius="10dp" /> <!-- Set the desired corner radius -->
        </shape>
    </item>

    <!-- Button default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E91E63" /> <!-- Set the desired default background color -->
            <corners android:radius="10dp" /> <!-- Set the desired corner radius -->
        </shape>
    </item>
</selector>
